<%- include('../../pages/partials/head') %>


<div class="contenedor-carrito">
<h2>Carrito</h2>
<div class="carrito" >
<div class="carrito-carrito">
  <% carrito.forEach((libro) => { %>
    <div class="carrito-libro">
    <div class="carrito-titulo">
      <img src="<%= libro.imagen %>" alt="Imagen del libro" width="100">
      <h3><%= libro.titulo %></h3>
   
      <p>Precio: $<%= libro.stock %></p>
        <p>Precio: $<%= libro.precio %></p>
       
        <form action="/carrito/eliminar/<%=libro.id%>?_method=DELETE" method="POST">
          <input type="hidden"name="_method " value="DELETE">
          <button type="submit" >Eliminar</button>
      </form>
      <form action="/comprar/carrito" method="post">
        <input type="hidden" name="libroId" value="<%= libro.id %>">
        <input type="hidden" name="titulo" value="<%= libro.titulo %>">
        <input type="hidden" name="precio" value="<%= libro.precio %>">
        <select id="stock" name="stock">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
        </select>
        <button type="submit">comprar</button>
        
      </form>
      </div>
    </div>
    <% }) %> 
    
  </div> 
  


 

<h2>Total: $<%= total %></h2>
</div>
<a href="/">volver a inicio</a>

</div>
<%- include('../../pages/partials/footer') %>     